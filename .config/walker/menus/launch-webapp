#!/usr/bin/env bash

app_name="$1"
url="$2"

if [[ -z "$app_name" || -z "$url" ]]; then
    echo "Usage: $0 <app-name> <url>"
    exit 1
fi

# Extract just the app name for the class
class_name=$(echo "$app_name" | sed 's/[^a-zA-Z0-9]//g')

chromium \
    --user-data-dir="$HOME/.config/chromium-webapps/$app_name" \
    --class="$class_name" \
    --app="$url" &
